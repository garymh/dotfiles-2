{
	"languageserver": {
		"ccls": {
			"command": "ccls",
			"filetypes": [
				"c",
				"cpp",
				"cuda",
				"objc",
				"objcpp"
			],
			"rootPatterns": [
				"compile_commands.json",
				".ccls",
				".ccls-cache",
				".vim/",
				".git/",
				".hg/"
			],
			"initializationOptions": {
				"cacheDirectory": ".ccls-cache"
			}
		}
	},
    "codeLens.enable": true,
    "diagnostic.displayByAle": true,
}
