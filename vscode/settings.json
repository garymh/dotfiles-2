{
    "vim.disableAnnoyingNeovimMessage": true,
    "workbench.iconTheme": "vscode-icons",
    "editor.fontFamily": "'Fira Code Retina','Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
    "editor.tabSize": 2,
    "editor.wordWrapColumn": 100,
    "editor.fontLigatures": true,
    "editor.lineNumbers": "relative",
    "window.menuBarVisibility": "toggle",
    "python.jediEnabled": false,
    "vim.enableNeovim": true,
    "vim.visualstar": true,
    "vim.useCtrlKeys": false,
    "vim.statusBarColorControl": true,
    "vim.sneak": true,
    "vim.incsearch": true,
    "vim.hlsearch": true,
    "vim.surround": true,
    "vim.leader": "<space>",
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": ["<leader>", "w"],
            "commands": [":w"]
        },
        {
            "before": ["<tab>"],
            "commands": ["workbench.action.quickOpen"]
        },
        {
            "before": ["<leader>", "<tab>"],
            "commands": ["workbench.action.showCommands"]
        },
        {
            "before": ["<leader>", "w"],
            "commands": ["workbench.action.closeActiveEditor"]
        },
        {
            "before": ["<leader>", "g", "p"],
            "commands": ["git.push"]
        },
        {
            "before": ["<leader>", "g", "l"],
            "commands": ["git.pull"]
        }
    ],
    "vim.visualModeKeyBindingsNonRecursive": [
        {
            "before": [
                ">"
            ],
            "commands": [
                "editor.action.indentLines"
            ]
        },
        {
            "before": [
                "<"
            ],
            "commands": [
                "editor.action.outdentLines"
            ]
        },
    ],
    "vim.textwidth": 100,
    "workbench.colorCustomizations": {
      "statusBar.background": "#5f0000",
      "statusBar.noFolderBackground": "#5f0000",
      "statusBar.debuggingBackground": "#5f0000"
    },
    "workbench.colorTheme": "Base16 Grayscale Dark",
    "latex-workshop.chktex.enabled": true,
    "latex-workshop.intellisense.surroundCommand.enabled": true,
    "latex-workshop.synctex.afterBuild.enabled": true,
    "latex-workshop.view.pdf.external.command": {
        "command": "zathura",
        "args": [
            "%PDF%"
        ]
    },
    "latex-workshop.view.pdf.external.synctex": {
      "command": "zathura",
      "args": [
        "--synctex-forward %LINE%:%TEX% %PDF%",
      ]
    },
    "latex-workshop.view.pdf.viewer": "external",
    "editor.wordWrap": "wordWrapColumn",
    "editor.minimap.enabled": false,
    "editor.quickSuggestionsDelay": 20,
    "vsicons.projectDetection.autoReload": true,
    "editor.fontSize": 13,
    "editor.detectIndentation": false,
    "workbench.editor.showTabs": false,
    "bracket-pair-colorizer-2.highlightActiveScope": true,
    "scm.diffDecorations": "gutter",
    "editor.overviewRulerLanes": 0
  }